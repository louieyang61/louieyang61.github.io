<script>
document.addEventListener("DOMContentLoaded", function() {
    const experienceItems = document.querySelectorAll('.carousel div');
    let currentItem = 0;

    experienceItems[currentItem].style.display = 'block'; // Show first item by default

    document.getElementById('next').addEventListener('click', function() {
        experienceItems[currentItem].style.display = 'none';
        currentItem = (currentItem + 1) % experienceItems.length;
        experienceItems[currentItem].style.display = 'block';
    });

    document.getElementById('prev').addEventListener('click', function() {
        experienceItems[currentItem].style.display = 'none';
        currentItem = (currentItem - 1 + experienceItems.length) % experienceItems.length;
        experienceItems[currentItem].style.display = 'block';
    });
});
</script>
